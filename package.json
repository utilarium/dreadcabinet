{
  "name": "@theunwalked/dreadcabinet",
  "version": "0.0.16-dev.0",
  "description": "dreadcabinet organizes the chaos.",
  "main": "dist/dreadcabinet.cjs",
  "module": "dist/dreadcabinet.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utilarium/dreadcabinet.git"
  },
  "homepage": "https://utilarium.github.io/dreadcabinet/",
  "exports": {
    ".": {
      "types": "./dist/dreadcabinet.d.ts",
      "import": "./dist/dreadcabinet.js",
      "require": "./dist/dreadcabinet.cjs"
    }
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "start": "dist/main.js",
    "dev": "vite build --watch",
    "watch": "npm run dev",
    "test": "npm run test:coverage && npm run test:readme",
    "test:coverage": "vitest run --coverage",
    "test:readme": "doccident -c .markdown-doctest-setup.mjs README.md",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "precommit": "npm run build && npm run test",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "focus",
    "productivity",
    "notes",
    "genai"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dayjs": "^1.11.13",
    "glob": "^11.0.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@doccident/doccident": "^0.0.7",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@swc/core": "^1.12.11",
    "@theunwalked/cardigantime": "^0.0.22",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.2.0",
    "mockdate": "^3.0.5",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "wrap-ansi": "7.0.0"
  }
}
